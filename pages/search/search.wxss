/* pages/search/search.wxss */

.item-list {
  padding: 20rpx 40rpx;
}

.item-list .item {
  padding: 20rpx 0;
  border-bottom: 1px solid #666;
  display: flex;
  flex-direction: row;
}

.item-list .item image {
  width: 100rpx;
  height: 130rpx;
  margin-right: 20rpx;
}

.item-list .item .item-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 10rpx 0;
}

.item-list .item .item-info .item-title {
  font-size: 32rpx;
}

.item-list .item .item-info .comment-year {
  font-size: 28rpx;
  color: #999;
}

.history {
  padding: 10rpx 20rpx;
}

.history .history-title {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  background: #f9f9f9;
  padding: 20rpx;
  font-size: 28rpx;
  color: #9e9e9e;
  margin-bottom: 20rpx;
}

.history .history-group {
  font-size: 32rpx;
  padding: 15rpx 0;
  border-bottom:1px solid #999; 
}
