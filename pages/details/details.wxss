.top-wrapper {
  padding: 60rpx 30rpx;
}

.top-wrapper .details-title {
  font-size: 50rpx;
}

.top-wrapper .details {
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
}

.top-wrapper .details .left-details {
  flex: 1;
  margin-right: 20rpx;
}

.top-wrapper .details .left-details .details-rate {
  display: flex;
  justify-content: flex-start;
  flex-direction: row;
  align-items: center;
}

.details-rate .comment-persons {
  font-size: 28rpx;
  color: #ccc;
}

.details-rate .comment-persons {
  margin-left: 15rpx;
}

.top-wrapper .details .right-details {
  width: 200rpx;
  height: 300rpx;
}

.top-wrapper .details .right-details image {
  width: 100%;
  height: 100%;
}

.del-sub-rate {
  margin-top: 30rpx;
  font-size: 32rpx;
}

.del-sub-rate view {
  margin-bottom: 10rpx;
}

.tags-wrapper {
  padding: 0 30rpx 60rpx;
}

.tags-wrapper .tags-title {
  color: #b3b3b3;
  font-size: 32rpx;
}

.tags-wrapper .tags-list {
  display: flex;
  flex-direction: row;
  justify-content:flex-start;
  flex-wrap: wrap;
  margin-top: 20rpx;
}

.tags-wrapper .tags-list text {
  /* flex: 1; */
  padding: 10rpx 20rpx;
  background-color: #f5f5f5;
  text-align: center;
  font-size: 27rpx;
  border-radius: 30rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
}

.comment-wrapper {
  padding: 0 30rpx 20rpx;
}

.comment-wrapper .comment-title {
  font-size: 32rpx;
  color: #b3b3b3;
  margin-bottom: 40rpx;
}

.more-comment {
  text-align: center;
  font-size: 30rpx;
  color: #3385ff;
  padding: 20rpx 0 50rpx;
}
